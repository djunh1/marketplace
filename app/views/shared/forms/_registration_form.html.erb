<%= form_for(resource, as: resource_name,
               url: registration_path(resource_name),
               html: { class:'form-marketplace-auth' } ) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group-marketplace-auth">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'form-marketplace-auth__input'  %>
        <%= inline_svg_tag "mail.svg", class: 'form-group-marketplace-auth__icon' %>
      </div>

      <div class="form-group-marketplace-auth">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class:' form-marketplace-auth__input'  %>
        <%= inline_svg_tag "key.svg", class: 'form-group-marketplace-auth__icon' %>
     </div>

    <div class="form-group-marketplace-auth">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class:' form-marketplace-auth__input' %>
      <%= inline_svg_tag "key.svg", class: 'form-group-marketplace-auth__icon' %>
    </div>

    <%= f.submit "Register",
            class: "button-marketplace m-3",
            disabled: false %>

<% end %>
<div class="containerLogin__sign-up">
    <span>Already have an account? &nbsp;&nbsp;</span><%= link_to "Log in", new_user_session_path %>
</div>
