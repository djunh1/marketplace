<%= form_for(resource, as: resource_name,
            url: password_path(resource_name),
            html: { method: :post, class:'form-marketplace-auth' }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group-marketplace-auth">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'form-marketplace-auth__input'  %>
      <%= inline_svg_tag "mail.svg", class: 'form-group-marketplace-auth__icon' %>
  </div>

    <%= f.submit "Reset Password", class: "button-marketplace m-2" %>

<% end %>

<%= render "devise/shared/links" %>
