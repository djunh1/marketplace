<%= form_for(resource, as: resource_name,
url: unlock_path(resource_name),
html: { method: :post, class:'form-marketplace-auth' }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group-marketplace-auth">
    <%= f.email_field :email, autofocus: false, placeholder: "Email", class: 'form-marketplace-auth__input'  %>
    <%= inline_svg_tag "mail.svg", class: 'form-group-marketplace-auth__icon' %>
  </div>

 <%= f.submit "Resend unlock instructions", class: "button-marketplace m-3" %>

<% end %>

<%= render "devise/shared/links" %>
