
<%= form_for(resource, as: resource_name,
             url: session_path(resource_name),
             html: { class:'form-marketplace-auth' }) do |f| %>

  <p class="mb-1">Please login to your account</p>
  <div class="form-group-marketplace-auth">
    <%= f.email_field :email, autofocus: false, placeholder: "Email", class: 'form-marketplace-auth__input'  %>
    <%= inline_svg_tag "mail.svg", class: 'form-group-marketplace-auth__icon' %>
  </div>

  <div class="form-group-marketplace-auth">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class:' form-marketplace-auth__input'  %>
    <%= inline_svg_tag "key.svg", class: 'form-group-marketplace-auth__icon' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-marketplace-auth__checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <%= f.submit "Log in", class: "button-marketplace m-3" %>

<% end %>

<%= render "devise/shared/links" %>
