<h2>Change your password</h2>

<%= form_for(resource, as: resource_name,
   url: password_path(resource_name),
   html: { method: :put, class:'form-marketplace-auth' }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group-marketplace-auth">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:' form-marketplace-auth__input' %>
    <%= inline_svg_tag "key.svg", class: 'form-group-marketplace-auth__icon' %>
  </div>

  <div class="form-group-marketplace-auth">
    <%= f.password_field :password_confirmation, autocomplete: "confirm-new-password", class:' form-marketplace-auth__input' %>
    <%= inline_svg_tag "key.svg", class: 'form-group-marketplace-auth__icon' %>
  </div>

    <%= f.submit "Change my password", class: "button-marketplace m-3" %>

<% end %>

<%= render "devise/shared/links" %>
